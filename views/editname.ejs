<%- include('partials/header.ejs'); -%>

<h1 class="heading">Edit your Name</h1>

<div class="filterContainer">
  <form class="filterForm" action="/getIDName" method="post"> 
      <input class="filterInput" type="text" id="getIDName" name="getIDName" placeholder="Enter your ID">
      <button class="filterBtn" type="submit">Get Name</button>
  </form>
</div>

<% if (locals.farmers){ %>
  <% farmers.forEach(function(farmers) {%>
    <div class="mainContainer">
      <div class="editContainer">
        <label>Name: </label>
        <p id="prop<%=farmers.name%>"><%= farmers.name %></p>

        <form class="editForm" action="/editname" method="post">
          <input type="hidden" name="id" value="<%= farmers.id %>">
          <input id="input<%=farmers.name%>" type="text" name="name" value="<%= farmers.name %>" autocomplete="off"
            autofocus="true" hidden="true" />
          <button id="done<%=farmers.name%>" type="submit" hidden><img class="icon"
            src="/assets/check-solid.svg" alt="tick image">
          </button>
        </form>
        <button id="edit<%=farmers.name%>" onclick="handler('<%=farmers.name%>')"><img class="icon"
          src="/assets/pencil-solid.svg" alt="pencil image">
        </button>

      </div>
    </div>
  <% }) %>
<% } %>

<script>
  function handler(prop) {
    document.getElementById("prop" + prop).setAttribute("hidden", true)
    document.getElementById("edit" + prop).setAttribute("hidden", true)
    document.getElementById("done" + prop).removeAttribute("hidden")
    document.getElementById("input" + prop).removeAttribute("hidden")
  }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
</script>
