<%- include('partials/header.ejs'); -%>
<div class="container">
    <img class="logo" src="images/logo.png" alt="">
    <h1>Register Farmer</h1>
    <form action="/add" method="post">
      <label for="name">Enter your Name: </label>
      <input type="text" id="name" name="name" required>
      
      <label for="age">Enter your Age</label>
      <input type="number" id="age" name="age" required>
      
      <label for="district">Enter District</label>
      <input type="text" id="district" name="district" required>
      
      <label for="state">Enter State</label>
      <input type="text" id="state" name="state" required>

      <label for="crop">Name of Crop being grown</label>
      <input type="text" id="crop" name="crop" required>
      
      <div class="button">
        <button type="submit" class="btn-des hover-des">Register</button>
      </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
