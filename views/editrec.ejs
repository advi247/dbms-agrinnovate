<h1 class="heading">Edit Details</h1>

<div class="container">
    <form action="/updaterec" method="post">
      <label for="name">Enter your ID: </label>
      <input type="number" id="id" name="id" required>

      <label for="name">Update your Name: </label>
      <input type="text" id="name" name="name" required>
      
      <label for="age">Update your Age</label>
      <input type="number" id="age" name="age" required>
      
      <label for="district">Update your District</label>
      <input type="text" id="district" name="district" required>
      
      <label for="state">Update your State</label>
      <input type="text" id="state" name="state" required>

      <label for="crop">Update Name of the Crop being grown</label>
      <input type="text" id="crop" name="crop" required>
      
      <div class="button">
        <button type="submit" class="btn-des hover-des">Update</button>
      </div>
    </form>
</div>

