<%- include('partials/header.ejs'); -%>

<h1 class="heading">Edit your Age</h1>

<div class="filterContainer">
  <form class="filterForm" action="/getIDAge" method="post"> 
      <input class="filterInput" type="text" id="getIDAge" name="getIDAge" placeholder="Enter your ID">
      <button class="filterBtn" type="submit">Get Age</button>
  </form>
</div>

<% if (locals.farmers){ %>
  <% farmers.forEach(function(farmers) {%>
    <div class="mainContainer">
      <div class="editContainer">
        <label>Age: </label>
        <p id="prop<%=farmers.age%>"><%= farmers.age %></p>

        <form class="editForm" action="/editage" method="post">
          <input type="hidden" name="id" value="<%= farmers.id %>">
          <input id="input<%=farmers.age%>" type="number" name="age" value="<%= farmers.age %>" autocomplete="off"
            autofocus="true" hidden="true" />
          <button id="done<%=farmers.age%>" type="submit" hidden><img class="icon"
            src="/assets/check-solid.svg" alt="tick image">
          </button>
        </form>
        <button id="edit<%=farmers.age%>" onclick="handler('<%=farmers.age%>')"><img class="icon"
          src="/assets/pencil-solid.svg" alt="pencil image">
        </button>
        
      </div>
    </div>
  <% }) %>
<% } %>

<script>
  function handler(prop) {
    document.getElementById("prop" + prop).setAttribute("hidden", true)
    document.getElementById("edit" + prop).setAttribute("hidden", true)
    document.getElementById("done" + prop).removeAttribute("hidden")
    document.getElementById("input" + prop).removeAttribute("hidden")
  }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
</script>
